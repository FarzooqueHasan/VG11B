rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all posts
    match /posts/{postId} {
      allow read: if true;
      // Only allow write access to the specific Admin UID
      allow write: if request.auth != null && request.auth.uid == "3mnksix1PvRqFjaFpeTXXDTaEkF2";
    }
  }
}
